<header class="header" role="banner">
  <div class="header-container">
    <!-- Brand -->
    <a href="/" class="logo" aria-label="Ivan Mendez â€” Home">Ivan Mendez</a>

    <!-- Mobile toggle -->
    <button class="menu-toggle" aria-controls="site-nav" aria-expanded="false">
      <span class="sr-only">Open menu</span>
      <svg width="24" height="24" viewBox="0 0 24 24" aria-hidden="true">
        <path
          d="M4 7h16M4 12h16M4 17h16"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"></path>
      </svg>
    </button>

    <!-- Nav -->
    <nav id="site-nav" class="nav" role="navigation" aria-label="Primary">
      <a href="/" class="nav-link">Home</a>
      <a href="/blog" class="nav-link">Blog</a>
      <a href="/projects" class="nav-link">Projects</a>
      <a href="/cv" class="nav-link">CV</a>
      <a href="/contact" class="nav-link nav-cta">Contact</a>
    </nav>
  </div>
</header>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .header {
    position: sticky;
    top: 0;
    z-index: 50;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: saturate(180%) blur(20px);
    border-bottom: 1px solid var(--color-gray-200);
  }
  .header-container {
    max-width: var(--max-width-content);
    margin: 0 auto;
    padding: 0 2rem;
    height: 4.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }
  .logo {
    font-size: 1.125rem;
    font-weight: var(--font-weight-semibold);
    color: var(--color-black);
    letter-spacing: -0.022em;
    text-decoration: none;
  }

  /* Mobile toggle hidden on desktop */
  .menu-toggle {
    display: none;
    border: 0;
    background: transparent;
    color: var(--color-gray-700, #444);
    padding: 0.375rem;
    border-radius: 0.5rem;
  }
  .menu-toggle:hover {
    color: var(--color-black);
  }
  .menu-toggle:focus-visible {
    outline: 2px solid var(--color-black);
    outline-offset: 2px;
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }
  .nav-link {
    position: relative;
    font-size: 0.9375rem;
    font-weight: var(--font-weight-normal);
    color: var(--color-gray-700, #444);
    text-decoration: none;
    transition: color var(--transition-fast, 160ms);
    /* underline animation */
    background-image: linear-gradient(currentColor, currentColor);
    background-position: 0 100%;
    background-repeat: no-repeat;
    background-size: 0% 1px;
    transition:
      color 160ms,
      background-size 160ms ease;
    padding-block: 0.25rem;
  }
  .nav-link:hover,
  .nav-link:focus-visible {
    color: var(--color-black);
    background-size: 100% 1px;
    outline: none;
  }
  /* active state */
  .nav-link.is-active {
    color: var(--color-black);
    background-size: 100% 1px;
  }

  /* ghost button for Contact on desktop */
  .nav-cta {
    border: 1px solid var(--color-gray-300, #ddd);
    border-radius: 0.75rem;
    padding: 0.5rem 0.9rem;
    background-image: none;
  }
  .nav-cta:hover,
  .nav-cta:focus-visible {
    border-color: var(--color-black);
    background: var(--color-black);
    color: #fff;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .header-container {
      padding: 0 1rem;
      height: 4rem;
    }
    .menu-toggle {
      display: inline-flex;
    }
    .nav {
      position: absolute;
      inset: 4rem 0 auto 0; /* below header */
      display: none;
      flex-direction: column;
      align-items: stretch;
      gap: 0;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--color-gray-200);
      padding: 0.5rem 1rem 1rem;
    }
    .nav.open {
      display: flex;
    }
    .nav-link {
      padding: 0.9rem 0.25rem;
      background-size: 0 0;
    }
    .nav-cta {
      border-radius: 0.6rem;
    }
  }
</style>

<script>
  // Active link based on current path
  (function () {
    const path = location.pathname.replace(/\/+$/, "") || "/";
    document.querySelectorAll(".nav-link").forEach((a) => {
      const href = a.getAttribute("href");
      if (!href) return;

      const normalized = href === "/" ? "/" : href.replace(/\/+$/, "");
      if (normalized === "/" ? path === "/" : path.startsWith(normalized)) {
        a.classList.add("is-active");
        a.setAttribute("aria-current", "page");
      }
    });

    // Mobile toggle
    const btn = document.querySelector(".menu-toggle");
    const nav = document.getElementById("site-nav");
    if (btn && nav) {
      btn.addEventListener("click", () => {
        const open = nav.classList.toggle("open");
        btn.setAttribute("aria-expanded", String(open));
      });
      // close on link click
      nav.querySelectorAll("a").forEach((a) =>
        a.addEventListener("click", () => {
          nav.classList.remove("open");
          btn.setAttribute("aria-expanded", "false");
        })
      );
    }
  })();
</script>
