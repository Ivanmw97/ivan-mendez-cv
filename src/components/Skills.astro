---
interface Skill {
  category: string;
  items: string[];
}

interface Props {
  skills: Skill[];
}

const { skills } = Astro.props;
const lang = Astro.url.pathname.startsWith('/es') ? 'es' : 'en';
---

<section class="py-12 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8 text-gray-800">
      {lang === 'es' ? 'Habilidades TÃ©cnicas' : 'Technical Skills'}
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {skills.map((skillGroup) => (
        <div class="bg-gray-50 rounded-lg p-6 shadow-sm">
          <h3 class="text-xl font-semibold mb-4 text-blue-600">{skillGroup.category}</h3>
          <div class="flex flex-wrap gap-2">
            {skillGroup.items.map((skill) => (
              <span class="bg-white px-3 py-1 rounded-full text-sm font-medium text-gray-700 border border-gray-200">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>