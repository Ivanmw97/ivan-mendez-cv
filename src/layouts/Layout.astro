---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Iván Westlund – Software Developer",
  description = "Software developer and digital creator crafting elegant and efficient solutions.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Iván Méndez" />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" sizes="any" />

    <!-- SEO / Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://ivanmendez.dev" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://ivanmendez.dev/og-preview.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://ivanmendez.dev/og-preview.png"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
