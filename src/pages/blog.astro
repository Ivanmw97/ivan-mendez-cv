---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const allPosts = await getCollection("blog");
const sortedPosts = allPosts.sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  }).format(date);
};
---

<Layout
  title="Blog - Ivan Mendez"
  description="Stories and insights from my path as a developer."
>
  <Header />

  <main class="blog-page">
    <div class="blog-container">
      <header class="blog-header">
        <h1 class="blog-title">The Dev Journal</h1>
        <p class="blog-description">
          Stories and insights from my path as a developer.
        </p>
      </header>

      {
        sortedPosts.length > 0 ? (
          <div class="posts-grid">
            {sortedPosts.map((post) => (
              <article class="post-card">
                <a href={`/blog/${post.slug}`} class="post-link">
                  {post.data.cover && (
                    <div class="post-image">
                      <img src={post.data.cover} alt={post.data.title} />
                    </div>
                  )}
                  <div class="post-content">
                    <h2 class="post-title">{post.data.title}</h2>
                    <time class="post-date">{formatDate(post.data.date)}</time>
                    <p class="post-description">{post.data.description}</p>
                  </div>
                </a>
              </article>
            ))}
          </div>
        ) : (
          <div class="empty-state">
            <p>No blog posts yet. Check back soon!</p>
          </div>
        )
      }
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .blog-page {
    min-height: calc(100vh - 4.5rem);
    padding: 4rem 2rem;
    background-color: var(--color-gray-50);
  }

  .blog-container {
    max-width: var(--max-width-content);
    margin: 0 auto;
  }

  .blog-header {
    margin-bottom: 4rem;
  }

  .blog-title {
    font-size: 3rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-black);
    margin-bottom: 1rem;
  }

  .blog-description {
    font-size: 1.125rem;
    color: var(--color-gray-600);
    max-width: 42rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  .post-card {
    background-color: var(--color-white);
    border-radius: 0.75rem;
    overflow: hidden;
    transition:
      transform var(--transition-base),
      box-shadow var(--transition-base);
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
  }

  .post-link {
    display: block;
  }

  .post-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background-color: var(--color-gray-100);
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }

  .post-card:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    padding: 1.5rem;
  }

  .post-title {
    font-size: 1.25rem;
    font-weight: var(--font-weight-semibold);
    color: var(--color-black);
    margin-bottom: 0.5rem;
    line-height: 1.4;
  }

  .post-date {
    display: block;
    font-size: 0.875rem;
    color: var(--color-gray-500);
    margin-bottom: 0.75rem;
  }

  .post-description {
    font-size: 0.9375rem;
    color: var(--color-gray-600);
    line-height: 1.6;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
  }

  .empty-state p {
    font-size: 1.125rem;
    color: var(--color-gray-500);
  }

  /* Tablet */
  @media (max-width: 1024px) {
    .blog-title {
      font-size: 2.5rem;
    }

    .posts-grid {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.5rem;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .blog-page {
      padding: 3rem 1.5rem;
    }

    .blog-header {
      margin-bottom: 3rem;
    }

    .blog-title {
      font-size: 2rem;
    }

    .blog-description {
      font-size: 1rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
